{
  "compilerOptions": {
    "resolveJsonModule": true,
    "lib": [
      "esnext",
      "dom",
      "webworker"
    ],
    "module": "esnext",
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "target": "esnext",
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,
    "types": ["vite/client","@types/node"],
    "paths": {
      "src/*": [
        "src/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "layouts/*": [
        "src/layouts/*"
      ],
      "pages/*": [
        "src/pages/*"
      ],
      "~libs/*": [
        "../backend/libs/*"
      ],
      "~backend/*": [
        "../backend/apps/api/src/*"
      ],
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts", 
    "src/**/*.tsx",
    "src/**/*.vue", "public/firebase-messaging-sw.js", "src/public/firebase-messaging-sw.js",
  ],
  "exclude": [
    "/dist",
    "node_modules"
  ],
}